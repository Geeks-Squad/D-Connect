<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.india.gov.helperapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UserAuthentication" />
        <activity android:name=".SkillSetActivity" />
        <activity android:name=".SignupActivity" />
        <activity android:name=".OTPActivity" />
        <activity
            android:name=".UpdateListActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UpdateDetailActivity"
            android:parentActivityName=".UpdateDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BookmarksActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MyAccountActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RecommendationsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>