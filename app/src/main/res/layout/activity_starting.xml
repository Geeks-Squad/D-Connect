<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choice_selection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    tools:context="com.india.gov.helperapp.StartingActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@android:drawable/btn_star_big_on" />

    <TextView
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select your choice."
        android:textColor="@color/cardview_light_background"
        android:background="#50398c"
        android:padding="20dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Employer"
            android:layout_marginBottom="5dp"
            android:background="#50398c"
            android:textColor="@color/cardview_light_background"
            android:id="@+id/employer"
            android:onClick="employerfunc"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#50398c"
            android:layout_marginBottom="5dp"
            android:textColor="@color/cardview_light_background"
            android:onClick="candidatefunc"
            android:id="@+id/candidate"
            android:text="Candidate" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="piafunc"
            android:id="@+id/pia"
            android:layout_marginBottom="5dp"
            android:background="#50398c"
            android:textColor="@color/cardview_light_background"
            android:layout_gravity="center_horizontal"
            android:text="PIA" />

        <Button
            android:layout_width="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="investorfunc"
            android:background="#50398c"
            android:textColor="@color/cardview_light_background"
            android:id="@+id/investor"
            android:text="Investor" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#50398c"
            android:textColor="@color/cardview_light_background"
            android:onClick="explore"
            android:text="Explore" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="50dp"
        >
        <TextView
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help"
            android:textColor="#626262"
            android:textSize="20dp"
            android:textAlignment="center"
            />

        <TextView
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" | "
            android:textColor="#626262"
            android:textSize="20dp"
            />

        <TextView
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:textColor="#626262"
            android:textSize="20dp"
            />

        <TextView
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" | "
            android:textColor="#626262"
            android:textSize="20dp"
            />

        <TextView
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:textColor="#626262"
            android:textSize="20dp"
            />

    </LinearLayout>

</LinearLayout>

